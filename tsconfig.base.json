{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@riders/firebase": ["libs/providers/firebase/src/index.ts"],
      "@riders/types": ["libs/types/src/index.ts"],
      "@riders/core": ["libs/core/src/index.ts"],
      "@riders/ui": ["libs/ui/src/index.ts"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "noPropertyAccessFromIndexSignature": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
